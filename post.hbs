    {{!< default}}
    <header class="site-header compact">
        <section class="header-content">
            <a itemprop="name url" class="blog-title" href="/">{{@blog.title}}</a>
            {{> links}}
        </section>
    </header>
    <main id="main" class="post">
        {{#post ~}}
        {{#contentFor "meta"}}
        <meta property="og:type" content="article" />
        <meta property="og:title" content="{{{title}}}" />
        <meta property="og:description" content="{{excerpt}}" />
        <meta property="og:url" content="{{url}}" />
        <meta property="og:site_name" content="{{@blog.title}}" />
        <meta property="article:published_time" content="{{date format='X'}}" />
        
        <meta name="twitter:card" value="summary_large_image"/>
        <meta name="twitter:site" value="{{@blog.title}}" />
        <meta name="twitter:creator" value="{{author.name}}" />
        <meta name="twitter:url" value="{{url absolute='true'}}"/>
        <meta name="twitter:title" value="{{{title}}}"/>
        <meta name="twitter:description" value="{{excerpt}}"/>
        {{/contentFor}}
        <article itemprop="blogPost" itemscope itemtype="http://schema.org/BlogPosting" class="content {{post_class}}">
            <header class="meta">
                <h1 class="post-title" itemprop="name headline">{{{title}}}</h1>
                <span class="post-data"><time class="timesince date" itemprop="datePublished" datetime="{{date format='YYYY-MM-DDTHH:mm'}}" title="{{date format='D MMM YYYY'}}" data-timesince="{{date format='X'}}">{{date format='D MMM YYYY'}}</time> <span itemprop="keywords" class="tags">{{tags prefix="in " separator=", "}}</span></span>
            </header>
            <section itemprop="articleBody text" class="post-content">
                {{content}}
            </section>
            {{> byline}}
	    {{> comments}}
        </article>
        {{~/post}}
    </main>
